<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondFragment" tools:ignore="MissingClass">

    <TextView
            android:id="@+id/textview_header"
            android:text="@string/random_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            android:layout_marginRight="24dp" android:layout_marginEnd="24dp"/>

    <Button
            android:id="@+id/button_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previous"
            app:layout_constraintTop_toBottomOf="@id/textview_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textview_random"
            app:layout_constraintTop_toBottomOf="@+id/textview_header"
            app:layout_constraintBottom_toTopOf="@+id/button_second" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="72sp" tools:ignore="HardcodedText"/>
</androidx.constraintlayout.widget.ConstraintLayout>