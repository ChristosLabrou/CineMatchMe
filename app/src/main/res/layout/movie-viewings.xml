<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@color/screenBackground">
    <EditText
            android:layout_width="59dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber3"
            android:hint="10€" android:textColorHint="@color/textColors"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="40dp" android:layout_marginEnd="124dp" android:layout_marginRight="124dp"/>
    <EditText
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber2"
            android:hint="0€" android:textColorHint="@color/textColors"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber3"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.796"/>
    <TextView
            android:text="Price Range"
            android:layout_width="83dp"
            android:layout_height="24dp" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/textColors"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber" android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="409dp"
            android:layout_height="343dp" app:srcCompat="@drawable/mapview3" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="59dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber"
            android:hint="15" android:textColorHint="@color/textColors"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Km radius"
            android:layout_width="74dp"
            android:layout_height="22dp" android:id="@+id/textView3"
            android:textColor="@color/textColors"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="89dp"
            android:layout_height="47dp" android:id="@+id/button3"
            android:text="back to Swiping" android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp" android:layout_marginRight="25dp" android:layout_marginBottom="25dp"
            android:background="@color/buttonColors"/>
</androidx.constraintlayout.widget.ConstraintLayout>