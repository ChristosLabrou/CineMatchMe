<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/login">

    <fragment
            android:id="@+id/FirstFragment"
            android:name="com.example.myapplication.FirstFragment"
            android:label="@string/first_fragment_label"
            tools:layout="@layout/fragment_first">

        <action
                android:id="@+id/action_FirstFragment_to_SecondFragment"
                app:destination="@id/SecondFragment"
        />
        <action
                android:id="@+id/action_FirstFragment_to_Login"
                app:destination="@id/login"
        />
    </fragment>
    <fragment
            android:id="@+id/SecondFragment"
            android:name="com.example.myapplication.SecondFragment"
            android:label="@string/second_fragment_label"
            tools:layout="@layout/fragment_second">

        <action
                android:id="@+id/action_SecondFragment_to_FirstFragment"
                app:destination="@id/FirstFragment"/>
        <argument android:name="myArg" app:argType="integer"/>
    </fragment>
    <fragment
            android:id="@+id/login"
            android:name="com.example.myapplication.User"
            android:label="Login"
            tools:layout="@layout/login">


        <action android:id="@+id/action_login_to_swiping" app:destination="@id/swiping"/>
    </fragment>
    <fragment android:id="@+id/swiping" android:name="com.example.myapplication.swiping"
              android:label="fragment_swiping" tools:layout="@layout/fragment_swiping"/>
    <fragment android:id="@+id/profile" android:name="com.example.myapplication.profile"
              android:label="fragment_profile" tools:layout="@layout/fragment_profile"/>


</navigation>